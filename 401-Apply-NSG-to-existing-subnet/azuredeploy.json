{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "virtualNetworkResourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "The resource group where the existing VNet is located."
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "The name of the existing VNet"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "default",
      "metadata": {
        "description": "The name of the existing subnet."
      }
    },
    "nsgSecurityGroupName": {
      "type": "string",
      "defaultValue": "default",
      "metadata": {
        "description": "The name of the NSG Subnet"
      }

    },
    "nsgAddsSubnet": {
      "type": "string",
      "defaultValue": "default",
      "metadata": {
        "description": "The AD IP subnet CIDR"
        }
      },
      "nsgCtxinfraSubnet":{
        "type": "string",
        "defaultValue": "default",
        "metadata": {
          "description": "The Citrix Infra IP subnet CIDR"
          }
        },
      "nsgCtxAppSubnet":{
          "type": "string",
          "defaultValue": "default",
          "metadata": {
            "description": "The Citrix App IP subnet CIDR"
            }
          },

     "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located."
      },
      "defaultValue": "https://raw.githubusercontent.com/vys99AZBuild/AzureAutomation/master/401-Apply-NSG-to-existing-subnet/"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation."
      },
      "defaultValue": ""
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('nsgSecurityGroupName')]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-03-01",
      "properties": {
        "securityRules": [
          {
            "name": "Allow-winrm-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "5985-5986",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
          {
            "name": "Allow-rdp-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 105,
              "direction": "Inbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-dns-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "53",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 100,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-dns-Udp",
            "properties": {
              "protocol": "Udp",
              "sourcePortRange": "*",
              "destinationPortRange": "53",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 105,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-krbtckt-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "88",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 110,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-krbtckt-Udp",
            "properties": {
              "protocol": "Udp",
              "sourcePortRange": "*",
              "destinationPortRange": "88",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 115,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-ntptime-Udp",
            "properties": {
              "protocol": "Udp",
              "sourcePortRange": "*",
              "destinationPortRange": "123",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 120,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-rpcmapper-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "135",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 125,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-krbpasswd-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "464",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 130,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-krbpasswd-Udp",
            "properties": {
              "protocol": "Udp",
              "sourcePortRange": "*",
              "destinationPortRange": "464",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 135,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-ldap-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "389",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 140,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-ldapssl-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "636",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 145,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-gc-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3268",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 150,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-adds-gcssl-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3269",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgAddsSubnet')]",
              "access": "Allow",
              "priority": 155,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-rdp2-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 160,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-Internet-https-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "INTERNET",
              "access": "Allow",
              "priority": 300,
              "direction": "Outbound"
            }
          },
          {
            "name": "Allow-ctxinfra-to-ctxapp-https-Tcp",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "[parameters('nsgCtxinfraSubnet')]",
              "destinationAddressPrefix": "[parameters('nsgCtxappSubnet')]",
              "access": "Allow",
              "priority": 305,
              "direction": "Outbound"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2017-08-01",
      "name": "deploy",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('virtualNetworkResourceGroupName')]",
      "dependsOn": [
        "[parameters('nsgSecurityGroupName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), concat('nested/updateSubnet.json', parameters('_artifactsLocationSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetworkName": {
            "value": "[parameters('virtualNetworkName')]"
          },
          "subnetName": {
            "value": "[parameters('subnetName')]"
          },
          "subnetAddressPrefix": {
            "value": "[reference(resourceId(parameters('virtualNetworkResourceGroupName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName')), '2018-03-01').addressPrefix]"
          },
          "nsgId": {
            "value": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgSecurityGroupName'))]"
          }
        }
      }
    }
  ],
  "outputs": {}
}